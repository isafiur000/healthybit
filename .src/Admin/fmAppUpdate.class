Public Sub Form_Open()

  Me.Center

End

Public Sub btnupdate_Click()

  Dim xlist As String[]
  Dim hForm As FmTerminal

  If UCase(modApplication.DistributionOSName()) = "UBUNTU" Then
    xlist = ["sudo", "apt-get", "update"]
    hForm = New FmTerminal("Exec", xlist)
    hForm.ShowModal
  Endif

End

Public Sub btnupgrade_Click()

  Dim xlist As String[]
  Dim hForm As FmTerminal

  If UCase(modApplication.DistributionOSName()) = "UBUNTU" Then
    xlist = ["sudo", "apt-get", "upgrade"]
    hForm = New FmTerminal("Exec", xlist)
    hForm.ShowModal
  Endif

End

Public Sub btnclose_Click()

  Me.Close

End
