' Gambas class file

Private sButton As String[]
Private $sValue As String

Public Sub Run(sTitle As String, sMessage As String, Optional xButton As String[]) As String

  Me.Title = sTitle
  sButton = xButton
  TextLabel1.Text = sMessage

  If Me.ShowModal() Then Return $sValue

End

Public Sub Form_Open()

  If sButton Then
    If sButton.Count = 1 Then
      Button3.Text = sButton[0]
      Button3.Font.Bold = True
      Button3.SetFocus
    Else If sButton.Count = 2 Then
      Button3.Text = sButton[0]
      Button2.Text = sButton[1]
      Button2.Visible = True
      Button2.Font.Bold = True
      Button2.SetFocus
    Else If sButton.Count = 3 Then
      Button3.Text = sButton[0]
      Button2.Text = sButton[1]
      Button1.Text = sButton[2]
      Button2.Visible = True
      Button1.Visible = True
      Button1.Font.Bold = True
      Button1.SetFocus
    Endif
  Endif

End

Public Sub Form_KeyRelease()

  If Key.Code = Key.Esc Then
    Me.Close()
  Endif

End

Public Sub btncopy_Click()

  Clipboard.Copy(TextLabel1.Text)

End

Public Sub btnGroup_Click()

  $sValue = Last.Text
  Me.Close(True)

End

Public Sub btnGroup_KeyRelease()

  If Key.Code = Key.Return Or If Key.Code = Key.Enter Or If Key.Code = Key.AltKey Then
    btnGroup_Click()
  Endif

End

Public Sub btnGroup_GotFocus()

  Last.Font.Bold = True

End

Public Sub btnGroup_LostFocus()

  Last.Font.Bold = False

End
