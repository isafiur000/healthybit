Public Sub btnsaveto_Click()

  If Message.Question(("Stock Transfer Process will be complete. Are you sure?"), ("No"), ("Yes")) = 2 Then
    If rbtrans.Value = True Then
      SaveFinalTransfer()
    Else If rblocked.Value = True Then
