''---------------------------- Activity -----------------------------
Private Function GetSelectedData() As String[]

  Dim aList As String[]
  Dim bList As String[]
  Dim Row As Integer
  Dim Rowx As Integer
  Dim aVar As String[]

  aVar = New String[]
  aList = New String[]
  For Row = 0 To GridView1.Rows.Count - 1
    If GridView1[Row, 0].Picture = Picture["icons/checked.png"] Then
      aList.Add(GridView1[Row, 1].Text)
    Endif
  Next

  bList = New String[]
  For Rowx = 0 To GridView2.Rows.Count - 1
    If GridView2[Rowx, 0].Picture = Picture["icons/checked.png"] Then
      aList.Add(GridView2[Rowx, 1].Text)
    Endif
  Next

  aVar.Insert(aList)
  aVar.Insert(bList)

  Return aVar

End

''--------------------- Send E-mail -------------------
Private Function GetSupplierEmail() As Variant[]

  Dim xxx As Variant[]
  Dim res As Result

  xxx = New Variant[]
  res = modDatabase.$myConn.Exec("select fldsuppname,fldsuppemail from tblsupplier where fldactive=&1 GROUP BY fldsuppemail", "Active")
  If res.Available Then
    For Each res
      xxx.Add([res["fldsuppemail"], res["fldsuppname"]])
    Next
  Endif

  Return xxx

End

Private Function GetSelectSupplierEmail() As Variant[]

  Dim xxx As Variant[]
  Dim res As Result

  Dim itmLst As String[]
  Dim Row As Integer
  Dim Row1 As Integer
  Dim i As Integer

  itmLst = New String[]
  For Row = 0 To GridView1.Rows.Count - 1
    If GridView1[Row, 0].Picture = Picture["icons/checked.png"] Then
      itmLst.Add(GridView1[Row, 1].Text)
    Endif
  Next
  For Row1 = 0 To GridView2.Rows.Count - 1
    If GridView2[Row1, 0].Picture = Picture["icons/checked.png"] Then
      itmLst.Add(GridView2[Row1, 1].Text)
    Endif
  Next

  If itmLst.Count Then
    For i = 0 To itmLst.Count - 1
      itmLst[i] = "'" & itmLst[i] & "'"
    Next

    xxx = New Variant[]
    res = modDatabase.$myConn.Exec("select fldsuppname,fldsuppemail from tblsupplier where fldactive=&1 and fldsuppname in(select fldsuppname from tbltenderlist where fldfromdate<=&2 and fldtodate>=&2 and fldstockid in(" & itmLst.Join(",") & ")) GROUP BY fldsuppemail", "Active", Date())
    If res.Available Then
      For Each res
        xxx.Add([res["fldsuppemail"], res["fldsuppname"]])
      Next
    Endif
  Endif

  Return xxx

End

Public Sub txtemail_Click()

  If modBasic.$PurLockToTender = "Enable" Then
    txtemail.Text = MedicalSelectedUser("Select Supplier E-Mail", GetSelectSupplierEmail())
  Else
    txtemail.Text = MedicalSelectedUser("Select Supplier E-Mail", GetSupplierEmail())
  Endif

End

Public Sub btnemail_Click()

  Dim hForm As FmRemoteMail
  Dim xList As String[]
  Dim xitem As String
  Dim xmsg As String
  Dim i As Integer

  i = 1
  xmsg = "Understock Items are : " & gb.NewLine
  xList = GetSelectedData()
  For Each xitem In xList
    xmsg = xmsg & CStr(i) & Space(2) & xitem & gb.NewLine
    i = i + 1
  Next

  hForm = New FmRemoteMail([txtemail.Text], "", "Under Stock Alert", xmsg)
  hForm.ShowModal

End
