' Gambas class file

Public Sub Form_Open()

  modGeneralMain.ArrangeFormCentre(Me, "False")

End

Public Sub txtsource_Click()

  Dialog.Filter = ["*.jpg;*.jpeg;*.png;*.bmp", "Picture files"]
  If Dialog.OpenFile() Then Return
  txtsource.Text = Dialog.Path

End

Public Sub btnconvert_Click()

  Dim xFile As String

  If txtwidth.Value And If txtheight.Value Then
    If txttarfolder.Value Then
      xFile = modImageSub.GetStretchedImage(txtsource.Text, txtwidth.Value, txtheight.Value)
      Copy xFile To txttarfolder.Value &/ File.Name(xFile)
      Balloon.Info(("Process Completed"), btnconvert)
      Balloon.Delay = modBasic.$BalloonDelay
    Endif
  Endif

End
