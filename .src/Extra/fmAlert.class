' Gambas class file

Private $heading As String
Private $alert As String
Private $strType As String

Public Sub _new(heading As String, alert As String, strType As String)

  $heading = heading
  $alert = alert
  $strType = strType

  lbldept.Text = $heading
  txtalert.Text = $alert

  If modBasic.$InfoMusic Then
    Music.Load(modBasic.$InfoMusic)
    If modBasic.$InfoMusicVol Then
      Music.Volume = modBasic.$InfoMusicVol
    Endif
    Music.Play
  Endif

End

Public Sub Form_Open()

  Me.Top = 0
  Me.Left = 0
  Me.TopOnly = True

End

Public Sub btnok_Click()

  Dim hForm As FmNewMail

  Music.Stop
  If $heading = "Message" Then
    hForm = New FmNewMail($strType)
    hForm.Show
  Endif
  Me.Close

End
