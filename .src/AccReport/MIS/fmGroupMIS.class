    xtax = 0
    xdsc = 0
    xsubs = 0
    xtotal = 0
    xhosp = 0
    xinstr = 0
    xdeprt = 0
    xanest = 0
    xother = 0
    If res.Available Then
      If res["itemcnt"] Then
        xcnt = res["itemcnt"]
      Endif
      If res["fldgross"] Then
        xsubtot = res["fldgross"]
      Endif
      If res["flddisc"] Then
        xdsc = res["flddisc"]
      Endif
      If res["fldsubsidy"] Then
        xsubs = res["fldsubsidy"]
      Endif
      If res["fldtax"] Then
        xtax = res["fldtax"]
      Endif
      If res["fldnetamt"] Then
