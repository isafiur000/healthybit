Public Sub btninvent_Click()

  Dim xPath As String
  Dim compLst As String[]

  Inc Application.Busy
  If cmblocat.Text = "%" Then
    If $PolyCompLst.Count Then
      compLst = $PolyCompLst.Copy()
    Else
      compLst = modBasic.$AllCompList.Copy()
    Endif
  Else
    compLst = [cmblocat.Text]
  Endif
  xPath = modHTMLStock.ShowTotalInventory($strType, compLst, cmblocation.Text, cmbvalue.Text)
  Dec Application.Busy
  modControlSub.OpenHTMLPreview("", xPath, "ReportSize")

End

