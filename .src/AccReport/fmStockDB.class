Private Sub ShowStockGrid()

  Dim xstr As String
  Dim xorder As String
  Dim xstate As String
  Dim xnear As Integer
  Dim xsearch As String
  Dim xroute As String
  Dim xgroup As String

  Dim compLst As String[]
  Dim i As Integer
  Dim xcomp As String

  If rbmed.Value = True Then
    If rbbrand.Value = True And If Len(Trim(txtname.Text)) Then
      xroute = " and fldstockid in(select fldbrandid from tblmedbrand where lower(fldbrand) like &1 and flddrug in(select flddrug From tbldrug where fldroute like &7))"
    Else
      xroute = " and fldstockid in(select fldbrandid from tblmedbrand where flddrug in(select flddrug From tbldrug where fldroute like &7))"
    Endif
  Else If rbsurg.Value = True Then
    xroute = " and fldstockid in(select fldbrandid from tblsurgbrand where fldsurgid in(select fldsurgid from tblsurgicals where fldsurgcateg like &7))"
  Else If rbextra.Value = True Then
    xroute = ""
  Endif

  If rbany.Value = True Then
    xstate = ""
  Else If rbnear.Value = True Then
    xstate = " and fldexpiry>&5 and fldexpiry<=&6"
  Else If rbexpired.Value = True Then
    xstate = " and fldexpiry<=&5"
  Endif
  xnear = modMisc.GetExpiryMonth(cmbmonth.Text)

  If chkabsent.Value = True Then
    xgroup = " GROUP BY fldstockid HAVING SUM(fldqty)=&3"
  Else If chkallstock.Value = True Then
    xgroup = " GROUP BY fldstockid"
  Else
    xgroup = " GROUP BY fldstockid HAVING SUM(fldqty)>&3"
  Endif
  xorder = " ORDER BY fldstockid ASC"

  If chkleftmain.Value Then
    xsearch = "%" & LCase(txtname.Text) & "%"
  Else
    xsearch = LCase(txtname.Text) & "%"
  Endif

  If cmblocat.Text = "%" Then
    If $PolyCompLst.Count Then
      compLst = $PolyCompLst.Copy()
      For i = 0 To compLst.Count - 1
        compLst[i] = "'" & compLst[i] & "'"
      Next
      xcomp = "fldcomp in(" & compLst.Join(",") & ") and "
    Else
      xcomp = "fldcomp like &2 and "
    Endif
  Else
    xcomp = "fldcomp=&2 and "
  Endif

  If MMain.$WebReport = "Multiple" Then
    xstr = modDataRepo.GetWhereStringRepo(cmblocation.Text, cmbvalue.Text)
    If rbmed.Value = True Then
      $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,AVG(fldsellpr) as xsell,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xstr & xgroup & xorder, xsearch, cmblocat.Text, 0, "Medicines", Now(), DateAdd(Now(), gb.Month, xnear))
    Else If rbsurg.Value = True Then
      $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,AVG(fldsellpr) as xsell,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xstr & xgroup & xorder, xsearch, cmblocat.Text, 0, "Surgicals", Now(), DateAdd(Now(), gb.Month, xnear))
    Else If rbextra.Value = True Then
      $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,AVG(fldsellpr) as xsell,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xstr & xgroup & xorder, xsearch, cmblocat.Text, 0, "Extra Items", Now(), DateAdd(Now(), gb.Month, xnear))
    Endif

  Else
    If rbmed.Value = True Then
      If rbbrand.Value = True And If Len(Trim(txtname.Text)) Then
        $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,fldstockid,SUM(fldqty) as qty,fldstockid from tblentry where " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xroute & xgroup & xorder, xsearch, cmblocat.Text, 0, "Medicines", Now(), DateAdd(Now(), gb.Month, xnear), cmbroute.Text)
      Else
        $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,fldstockid,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xroute & xgroup & xorder, xsearch, cmblocat.Text, 0, "Medicines", Now(), DateAdd(Now(), gb.Month, xnear), cmbroute.Text)
      Endif
    Else If rbsurg.Value = True Then
      $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,fldstockid,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xroute & xgroup & xorder, xsearch, cmblocat.Text, 0, "Surgicals", Now(), DateAdd(Now(), gb.Month, xnear), cmbroute.Text)
    Else If rbextra.Value = True Then
      $rData = modDatabase.$syConn.Exec("select fldstockid,fldstockid,fldstockid,SUM(fldqty) as qty,fldstockid from tblentry where lower(fldstockid) like &1 and " & xcomp & "fldcategory=&4 and fldqty>=&3" & xstate & xroute & xgroup & xorder, xsearch, cmblocat.Text, 0, "Extra Items", Now(), DateAdd(Now(), gb.Month, xnear), cmbroute.Text)
    Endif

  Endif

  $aMyFields = New String[]
  modGridView.ReadSmallData(GridView1, $rData, $aMyFields)
  With GridView1
    .Columns[0].Width = 375 * modBasic.$AppWidthRatio
    If MMain.$WebReport = "Multiple" Then
      .Columns[1].Width = 75 * modBasic.$AppWidthRatio
      .Columns[2].Width = 100 * modBasic.$AppWidthRatio
    Else
      .Columns[1].Width = 150 * modBasic.$AppWidthRatio
      .Columns[2].Width = 75 * modBasic.$AppWidthRatio
    Endif
    .Columns[3].Width = 65 * modBasic.$AppWidthRatio
    .Columns[4].Width = 1

    .Columns[0].Text = "Generic Name"
    If MMain.$WebReport = "Multiple" Then
      .Columns[1].Text = "Type"
      .Columns[2].Text = "Rate"
    Else
      .Columns[1].Text = "Brand Name"
      .Columns[2].Text = "Type"
    Endif
    .Columns[3].Text = "QTY"
  End With
  txtamt.Value = 0

End

Public Sub GridView1_Data(Row As Integer, Column As Integer)

  $rData.MoveTo(Row)
  modGeneralMain.GridViewDecoration(GridView1, Row)
  If Column = 1 Then
    If MMain.$WebReport = "Multiple" Then
      GridView1.Data.Text = modMedicine.GetRouteFromItem($rData[$aMyFields[Column]], $strType)
    Else
      GridView1.Data.Text = modMedConstant.ConvertGenericToBrand($rData[$aMyFields[Column]])
    Endif
  Else If Column = 2 Then
    If MMain.$WebReport = "Multiple" Then
      GridView1.Data.Text = modReportVar.GetLocaleNumberFormat($rData[$aMyFields[Column]], gb.Currency)
    Else
      GridView1.Data.Text = modMedicine.GetRouteFromItem($rData[$aMyFields[Column]], $strType)
    Endif
  Else If Column = 3 Then
    GridView1.Data.Text = $rData[$aMyFields[Column]]
  Else
    GridView1.Data.Text = $rData[$aMyFields[Column]]
  Endif
  GridView1.Rows[Row].Height = Max(GridView1.Rows[Row].Height, GridView1.Data.Font.RichTextHeight(GridView1.Data.Text, GridView1.Columns[Column].Width - 5 * modBasic.$AppWidthRatio) + (GridView1.Rows.Height - GridView1.Font.Height))
  GridView1.Data.WordWrap = True

End

