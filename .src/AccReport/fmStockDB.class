Public Sub GridView1_Click()

  Dim hForm As FRequest
  Dim sql As String
  Dim res As Result
  Dim xitem As String
  Dim xstate As String
  Dim xnear As Integer

  Dim compLst As String[]
  Dim i As Integer
  Dim xcomp As String

  If rbany.Value = True Then
    xstate = ""
  Else If rbnear.Value = True Then
    xstate = " and fldexpiry>&4 and fldexpiry<=&5"
  Else If rbexpired.Value = True Then
    xstate = " and fldexpiry<=&4"
  Endif
  xnear = modMisc.GetExpiryMonth(cmbmonth.Text)
  xitem = GridView1[GridView1.Row, 0].Text

  If cmblocat.Text = "%" Then
    If $PolyCompLst.Count Then
      compLst = $PolyCompLst.Copy()
      For i = 0 To compLst.Count - 1
        compLst[i] = "'" & compLst[i] & "'"
      Next
      xcomp = " and fldcomp in(" & compLst.Join(",") & ")"
    Else
      xcomp = " and fldcomp like &3"
    Endif
  Else
    xcomp = " and fldcomp=&3"
  Endif
  If MMain.$WebReport = "Multiple" Then
    sql = "select fldstockno,fldstockid,fldbatch,fldexpiry,fldqty,fldsellpr,fldstatus,fldcomp,fldhospcode from tblentry where fldstockid=&1 and fldqty>&2" & xcomp & xstate & modDataRepo.GetWhereStringRepo(cmblocation.Text, cmbvalue.Text)
  Else
    sql = "select fldstockno,fldstockid,fldbatch,fldexpiry,fldqty,fldsellpr,fldstatus,fldcomp from tblentry where fldstockid=&1 and fldqty>&2" & xcomp & xstate
  Endif
  res = modDatabase.$syConn.Exec(sql, xitem, 0, cmblocat.Text, Now(), DateAdd(Now(), gb.Month, xnear))
  If res.Available Then
    hForm = New FRequest(res, xitem, "StockDB", False)
    hForm.ShowModal
  Endif

End

