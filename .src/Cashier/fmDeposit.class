Private Function AddDepositToQRScan(xinvoice As String, xAmt As Float) As Boolean

  Dim idLock As Boolean
  Dim $billno As String
  Dim xbool As Boolean

  idLock = modBillLock.LockTableForID("TempBill")
  If idLock = True Then

    modDatabase.$myConn.Begin
    $billno = modBillLock.GetWebReceiptValue("QR")
    If $billno Then
      modBillings.InsertAdvRecptDepositOnError(modDatabase.$myConn, Trim(txtencid.Text), $billno, xAmt, $sTatus, xinvoice)
      modDatabase.$myConn.Commit
      xbool = True
      modBillLock.ReleaseLockTable("TempBill")

    Else
      modDatabase.$myConn.Rollback
      xbool = False
      modBillLock.ReleaseLockTable("TempBill")

    Endif
  Endif
  Return xbool

Catch
  modDatabase.$myConn.Rollback
  If idLock = True Then
    modBillLock.ReleaseLockTable("TempBill")
  Endif
  Return False
  modHelpVariable.CreateErrorReport()

End
