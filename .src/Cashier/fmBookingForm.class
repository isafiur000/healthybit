Public Sub Form_KeyRelease()

  If Key.Code = Key["Y"] And If Key.Alt Then
    btnyear.Text = "Year"
    btnmon.Text = "Mon"
  Else If Key.Code = Key["M"] And If Key.Alt Then
    btnyear.Text = "Mon"
    btnmon.Text = "Day"
  Else If Key.Code = Key["D"] And If Key.Alt Then
    btnyear.Text = "Day"
    btnmon.Text = "Hour"
  Else
    modGeneralmain.GoToNextControlTab()
  Endif

End

