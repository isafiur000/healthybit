    ShowNewRegimen()
    lstletter2.List = modString.GetFirstLetterArray($ItemList)
  Else If TabPanel1.Index = 1 Then
    SHowPastGrid()
    lstletter.List = modString.GetFirstLetterArray($ItemList)
  Endif
  sIndexLst = New Long[]

End

Private Sub ShowTabGrid()

