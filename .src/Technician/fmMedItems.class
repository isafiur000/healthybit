''------------------------- reserve/Transfer --------------------------
Public Sub btnreserve_Click()

  Dim res1 As Result
  Dim res2 As Result
  Dim Row1 As Integer
  Dim Row2 As Integer

  If GridView1.Rows.Selection.Count And If GridView2.Rows.Selection.Count Then
    Row1 = GridView1.Row
    Row2 = GridView2.Row

    modDatabase.$myConn.Begin
    res2 = modDatabase.$myConn.Edit("tblmedinventory", "fldid=&1 and fldcategory=&2 and fldstatus=&3", GridView1[GridView1.Row, 10].Text, $sType, "Active")
    If res2.Available Then
      res1 = modDatabase.$myConn.Edit("tblpatmeditem", "fldid=&1 and fldencounterval=&2 and fldorder=&3", GridView2[GridView2.Row, 0].Text, GridView2[GridView2.Row, 2].Text, "Requested")
      If res1.Available Then
        ''patient request
        res1["fldcode"] = GridView1[GridView1.Row, 1].Text
        res1["fldorder"] = "Waiting"
        res1.Update
        ''blood inventory
        res2["fldreceiver"] = GridView2[GridView2.Row, 2].Text
        res2["fldstatus"] = "Reserved"
        res2["fldsave"] = False
        res2["xyz"] = False
        res2.Update
        modDatabase.$myConn.Commit
      Else
        modDatabase.$myConn.Rollback
      Endif
    Else
      modDatabase.$myConn.Rollback
    Endif
    FillPatDateGrid()
    ShowBloodRequests()

    GridView1.Row = Row1
    GridView2.Row = Row2
  Endif

Catch
  modDatabase.$myConn.Rollback
  modHelpVariable.CreateErrorReport()

End

Public Sub btnready_Click()

  Dim res2 As Result
  Dim Row As Integer

  If GridView1.Rows.Selection.Count Then
    Row = GridView1.Row
    ''blood inventory
    res2 = modDatabase.$myConn.Edit("tblmedinventory", "fldid=&1 and fldcategory=&2 and fldstatus=&3", GridView1[GridView1.Row, 10].Text, $sType, "Reserved")
    If res2["fldcrossmatch"] Then
      res2["fldstatus"] = "Allocated"
      res2["fldsave"] = False
      res2["xyz"] = False
      res2.Update
      SendNotification(GridView1[GridView1.Row, 1].Text)
      FillPatDateGrid()
    Else
      Message.Warning("No Cross match Report", ("OK"))
    Endif
    GridView1.Row = Row
  Endif

End

Private Sub SendNotification(sCode As String)

  Dim res As Result

  res = modDatabase.$myConn.Exec("select fldencounterval,flditem,fldcomp_order from tblpatmeditem where fldcode=&1 and fldorder=&2", sCode, "Waiting")
  If res.Available Then
    res.MoveLast
    modControl.SendCompIDNotofication(res["fldcomp_order"], "Blood Allocated to " & modPatient.GetPatientNameByEnc(res["fldencounterval"]), res["flditem"] & " is approved for transfer to Location: " & modPatient.GetPatientLocation(res["fldencounterval"]))
  Endif

End

Public Sub btnunlock_Click()

  Dim res1 As Result
  Dim res2 As Result
  Dim Row As Integer

  If GridView1.Rows.Selection.Count Then
    Row = GridView1.Row

    modDatabase.$myConn.Begin
    res2 = modDatabase.$myConn.Edit("tblmedinventory", "fldid=&1 and fldcategory=&2 and fldstatus=&3", GridView1[GridView1.Row, 10].Text, $sType, "Reserved")
    If res2.Available Then
      ''patient request
      res1 = modDatabase.$myConn.Edit("tblpatmeditem", "fldcode=&1 and fldorder=&2", GridView1[GridView1.Row, 1].Text, "Waiting")
      If res1.Available Then
        res1["fldcode"] = ""
        res1["fldorder"] = "Requested"
        res1.Update
        ''blood inventory
        res2["fldreceiver"] = ""
        res2["fldstatus"] = "Active"
        res2["fldsave"] = False
        res2["xyz"] = False
        res2.Update
        modDatabase.$myConn.Commit
      Else
        modDatabase.$myConn.Rollback
      Endif
    Else
      modDatabase.$myConn.Rollback
    Endif

    FillPatDateGrid()
    ShowBloodRequests()
    GridView1.Row = Row
  Endif

Catch
  modDatabase.$myConn.Rollback
  modHelpVariable.CreateErrorReport()

End

Public Sub btntransfer_Click()

  Dim res1 As Result
  Dim res2 As Result
  Dim Row As Integer

  If GridView1.Rows.Selection.Count Then
    Row = GridView1.Row

    modDatabase.$myConn.Begin
    res2 = modDatabase.$myConn.Edit("tblmedinventory", "fldid=&1 and fldcategory=&2 and (fldstatus=&3 or fldstatus=&4)", GridView1[GridView1.Row, 10].Text, $sType, "Allocated", "Requested")
    If res2.Available Then
      ''patient request
      res1 = modDatabase.$myConn.Edit("tblpatmeditem", "fldcode=&1 and fldorder=&2", GridView1[GridView1.Row, 1].Text, "Waiting")
      If res1.Available Then
        res1["fldorder"] = "Done"
        res1["flduserid"] = modBasic.$lbluser
        res1["fldtime"] = Now()
        res1["fldcomp"] = modBasic.$compID
        res1["fldsave"] = True
        res1["xyz"] = False
        res1.Update
        ''blood inventory
        res2["fldstatus"] = "Transferred"
        res2["fldsave"] = False
        res2["xyz"] = False
        res2.Update
        modDatabase.$myConn.Commit
      Else
        modDatabase.$myConn.Rollback
      Endif
    Else
      modDatabase.$myConn.Rollback
    Endif

    FillPatDateGrid()
    ShowBloodRequests()
    GridView1.Row = Row
  Endif

Catch
  modDatabase.$myConn.Rollback
  modHelpVariable.CreateErrorReport()

End
