Public Sub _new(sType As String)

  $sType = sType

End

Public Sub Form_Open()

  modGeneralMain.ArrangeEmbedForms(Me, Panel1, "Vertical")
  Me.Icon = Picture[modGeneralMain.$strLogo]
  Me.Title = $sType & " Inventory"
  dtexpiry.Value = Date()
  If $sType = "Blood" Then
    cmbitem.List = modControlSub.GetDirectFillresult(modDatabase.$myConn.Exec("select flditemcode as col from tblbloodstore"))
  Endif
  cmbitem.Text = "%"
  cmbstatus.List = ["Active", "Reserved", "Allocated", "Requested", "Transferred", "Administered", "Returned", "Rejected", "Expired"]
  cmbstatus.Text = "Active"

  $SSQLFields = ["fldid", "fldencounterval", "fldencounterval", "fldencounterval", "fldencounterval", "fldencounterval", "flditem", "fldtime_order", "fldcomp_order", "fldorder"]
  ShowBloodRequests()

End

Public Sub Form_Close()

  modGeneralMain.RecordFormExit(Me)

End

